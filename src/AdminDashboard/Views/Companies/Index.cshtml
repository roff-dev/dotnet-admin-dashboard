@model IEnumerable<AdminDashboard.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Companies</h1>

        <div>
            <a asp-action="Create" class="btn btn-primary">Create New Company</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Website</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Logo))
                            {
                                <img src="@item.Logo" alt="Company Logo" style="max-width: 100px; max-height: 100px;" />
                            }
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Website))
                            {
                                <a href="@item.Website" target="_blank">@item.Website</a>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="View" asp-route-id="@item.Id" class="btn btn-primary btn-sm">View</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>