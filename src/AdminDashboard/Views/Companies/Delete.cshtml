@model AdminDashboard.Models.Company

@{
    ViewData["Title"] = "Delete Company";
}

<div class="container-fluid">
    <h1>Delete Company</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this company?</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">Website</dt>
                <dd class="col-sm-10">@Model.Website</dd>

                <dt class="col-sm-2">Logo</dt>
                <dd class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model.Logo))
                    {
                        <img src="@Model.Logo" alt="Company Logo" style="max-width: 100px; max-height: 100px;" />
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>