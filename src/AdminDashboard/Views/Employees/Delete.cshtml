@model AdminDashboard.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <h1>Delete Employee</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this employee?</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">First Name</dt>
                <dd class="col-sm-10">@Model.FirstName</dd>

                <dt class="col-sm-2">Last Name</dt>
                <dd class="col-sm-10">@Model.LastName</dd>

                <dt class="col-sm-2">Company</dt>
                <dd class="col-sm-10">@Model.Company?.Name</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Model.Email</dd>

                <dt class="col-sm-2">Phone Number</dt>
                <dd class="col-sm-10">@Model.PhoneNumber</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>